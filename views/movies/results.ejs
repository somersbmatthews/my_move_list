<!DOCTYPE HTML>
<html>
<head>

    <link type="text/css" href="/css/style.css" rel="stylesheet">
    <link type="text/css" href="/css/searchPage.css" rel="stylesheet">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.0/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Monoton" rel="stylesheet">
    <script src="https://use.fontawesome.com/d37a5741c5.js"></script>
</head>
<body>

<% include ../partials/movieshead.ejs %>


<script src="https://use.fontawesome.com/d37a5741c5.js"></script>
<div class="hOne-holder">
    <h1>Search Results</h1>    
</div>

<% if(body.results.length != 0){ %>
    <% for (let i = 0; i < body.results.length; i++) { %>
    <% if (body.results[i].vote_average >= minRating ) { -%>
          
          <% let date = body.results[i].release_date %>
         <% let year = date.slice(0,4) %>

         
        <div class="container">
            <a href="/movies/<%=body.results[i].id%>">
            <img id="background" src="https://image.tmdb.org/t/p/w600/<%= body.results[i].backdrop_path %>">
            </a>
            <div class="top">
                <h2><%= body.results[i].title %> (<%= year %>)</h2>
                <p>User Rating <%= body.results[i].vote_average %> <i class="fa fa-star-o" aria-hidden="true"></i></p>
                <h3>Overview</h3>
                <h4><%= body.results[i].overview %></h4>

            </div>

            <a href="/movies/<%=body.results[i].id%>">
                <img id="poster" src="https://image.tmdb.org/t/p/w300/<%= body.results[i].poster_path %>">
            </a>

        </div>
        <% } -%>
        <% } %>
    <% } %>

    <h2>End of Results</h2>

<% include ../partials/moviesfooter.ejs %>
